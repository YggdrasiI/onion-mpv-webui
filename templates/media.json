{
  "dirname": "{{dirname}}",
  "files": [
    {% for file in files %}
    {% if meta.loop0 != "0" %},{% endif %}
    {
      {% if file.type == "dir" %}
      "list": "/media/api/list/{{share_key}}{{uri_rel_path}}{{file.name}}/",
      "play": "/media/api/playlist_add/{{share_key}}{{uri_rel_path}}{{file.name}}",
      "size": -1,
      {% else %}
      "play": "/media/api/playlist_add/{{share_key}}{{uri_rel_path}}{{file.name}}",
      "size": {{file.size}},
      {% endif %}
      "modified": {{file.modified}}
    }
    {% endfor %}
  ]
}
